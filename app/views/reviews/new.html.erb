<div class="row">
  <div class="large-12">
    <h1>Add a new review</h1>

    <%= form_for [@restaurant, @review] do |f| %>
      <%= f.label :rating %>
      <%= f.number_field :rating, in: 1..5 %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.submit "Add your review!", :class => "tiny button" %>
    <% end %>

  <%= link_to 'Back', restaurant_path(@restaurant)%>


  </div>
</div>
